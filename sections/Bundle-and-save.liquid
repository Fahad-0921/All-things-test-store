<style>
/* Container and Layout */
.bundle-save-container {
  border: 2px solid #e7e7e7;
  padding: 10px 20px;
  width: 100%;
  max-width: 600px;
  margin: auto;
}

.bundle-table h3 {
  margin-bottom: 10px;
  margin-top: 5px;
  font-weight: 600;
}

.bundle-table table {
  width: 100%;
  border-collapse: collapse;
}

.bundle-table th,
.bundle-table td {
  padding: 5px;
  text-align: left;
}

.discount {
  background-color: #817364;
  color: white;
  padding: 2px 5px;
  border-radius: 5px;
  font-size: 10px;
}

.product-list {
  display: flex;
  flex-direction: column;
  gap: 20px;
  margin-top: 20px;
}

.info-icon .items-wrap{
  display: inline-flex; 
  align-items: center; 
  border: 1px solid #736c6c; 
  border-radius: 50%;
}
  

.my-product-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.my-product-item img {
  width: 80px;
  height: 100px;
  margin-right: 20px;
}

.my-product-info {
  display: flex;
  flex-direction: column;
}

.my-quantity-controls {
  display: flex;
  align-items: center;
  gap: 5px;
  margin-top: 5px;
}

.my-quantity-controls button {
  border-radius: 3px;
  font-size: 24px;
  width: 40px;
  height: 40px;
  cursor: pointer;
  background: none;
}


.my-quantity-controls input {
  width: 60px;
  height: 40px;
  text-align: center;
  min-height: 0;
  border-radius: 3px;
}

.my-quantity-controls button,
.my-quantity-controls input {
  border: 1px solid lightgray;  /* Light border for initial state */
  transition: border-color 0.3s ease;
}  
  
.my-quantity-controls.active button,
.my-quantity-controls.active input {
  border-color: black;  /* Black border when active */
}

input[type=number]::-webkit-inner-spin-button,
input[type=number]::-webkit-outer-spin-button {
  -webkit-appearance: none;
  margin: 0;
}
  
  

table:not([class]){
  box-shadow: none;
}
  
.text-info-wrap{
 display: flex;
    justify-content: center;
    align-items: center; 
}
  
table:not([class]) td, table:not([class]) th {
  padding: 5px;
}  



.info-icon {
  position: relative; 
}

.popup {
  min-width: 200px;
  width: 100%;
  display: none; 
  position: absolute;
  background-color: #f5f1f1;
  border-radius: 5px;
  padding: 15px 10px;
  z-index: 10;
  top: 80%;
  opacity: 0;
  transition: opacity 0.3s ease, visibility 0.3s ease; 
  visibility: hidden; 
  font-size: 12px;
  line-height: 1.5;
}

.info-icon:hover .popup {
  display: block;
  opacity: 1; 
  visibility: visible; 
}

</style>



<script>

  function updateInputBorder(input) {
  const controls = input.parentElement; // Target the parent control container
  
  // Check if input value is greater than 0
  if (parseInt(input.value) > 0) {
    // Apply 'active' class to the parent control container
    controls.classList.add('active');
  } else {
    // Remove 'active' class if the value is 0
    controls.classList.remove('active');
  }
}


  
// Increment Button Logic
document.querySelectorAll('.increment').forEach(button => {
  button.addEventListener('click', function() {
    const input = this.previousElementSibling;
    input.value = parseInt(input.value) + 1;
    updateInputBorder(input);  // Update border after increment
  });
});

// Decrement Button Logic
document.querySelectorAll('.decrement').forEach(button => {
  button.addEventListener('click', function() {
    const input = this.nextElementSibling;
    if (parseInt(input.value) > 0) {
      input.value = parseInt(input.value) - 1;
    }
    updateInputBorder(input);  // Update border after decrement
  });
});

  
</script>


