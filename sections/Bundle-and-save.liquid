<style>
/* Container and Layout */
.bundle-save-container {
  border: 2px solid #e7e7e7;
  padding: 5px 20px;
  width: 100%;
  max-width: 600px;
  margin: auto;
}

.bundle-table h3 {
  margin-bottom: 10px;
  margin-top: 5px;
  font-weight: 600;
}

.bundle-table table {
  width: 100%;
  border-collapse: collapse;
}

.bundle-table th,
.bundle-table td {
  padding: 5px;
  text-align: left;
}

.discount {
  background-color: #817364;
  color: white;
  padding: 2px 5px;
  border-radius: 5px;
  font-size: 10px;
}

.product-list {
  display: flex;
  flex-direction: column;
  gap: 20px;
  margin-top: 20px;
}

.my-product-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.my-product-item img {
  width: 80px;
  height: 100px;
  margin-right: 20px;
}

.my-product-info {
  display: flex;
  flex-direction: column;
}

.my-quantity-controls {
  display: flex;
  align-items: center;
  gap: 5px;
  margin-top: 5px;
}

.my-quantity-controls button {
  border-radius: 3px;
  font-size: 24px;
  width: 40px;
  height: 40px;
  /* background-color: #f0f0f0; */
   border: 1px solid lightgray;
  cursor: pointer;
  background: none;
}

.my-quantity-controls button.active  {
        border-color: #000;
}  

.my-quantity-controls input {
  width: 60px;
  height: 40px;
  text-align: center;
  /* border: 1px solid #918585; */
  min-height: 0;
  border-radius: 3px;
    border: 1px solid lightgray;
  transition: border-color 0.3s ease;
}


.my-quantity-controls input.active {
     border-color: #000;
}
  


input[type=number]::-webkit-inner-spin-button,
input[type=number]::-webkit-outer-spin-button {
  -webkit-appearance: none;
  margin: 0;
}
  
  

table:not([class]){
  box-shadow: none;
}
  
.text-info-wrap{
 display: flex;
    justify-content: center;
    align-items: center; 
}
  
table:not([class]) td, table:not([class]) th {
  padding: 5px;
}  
  
 
</style>



<script>
// Function to toggle the border based on the input value
function updateInputBorder(input) {
  if (parseInt(input.value) === 0) {
    input.classList.remove('active');
  } else {
    input.classList.add('active');
  }
}

// Increment Button Logic
document.querySelectorAll('.increment').forEach(button => {
  button.addEventListener('click', function() {
    const input = this.previousElementSibling;
    input.value = parseInt(input.value) + 1;
    updateInputBorder(input);  // Update border after increment
  });
});

// Decrement Button Logic
document.querySelectorAll('.decrement').forEach(button => {
  button.addEventListener('click', function() {
    const input = this.nextElementSibling;
    if (parseInt(input.value) > 0) {
      input.value = parseInt(input.value) - 1;
    }
    updateInputBorder(input);  // Update border after decrement
  });
});

  
</script>


