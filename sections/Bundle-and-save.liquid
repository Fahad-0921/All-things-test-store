<div class="bundle-save-container">
  <!-- Bundle and Save Table -->
  <div class="bundle-table">
    <h3>Bundle and Save</h3>
    <table>
      <thead>
        <tr>
          <th>Quantity</th>
          <th>Price with Savings</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>3-5</td>
          <td>$26.70 <span class="discount">11% Off</span></td>
        </tr>
        <tr>
          <td>6-11</td>
          <td>$25.80 <span class="discount">14% Off</span></td>
        </tr>
        <tr>
          <td>12+</td>
          <td>$24.90 <span class="discount">17% Off</span></td>
        </tr>
      </tbody>
    </table>
  </div>

  <!-- Product List -->
  <div class="product-list">
    <!-- Product 1 -->
    <div class="my-product-item">
      <img src="https://cdn.shopify.com/s/files/1/0637/4703/1087/files/wax-special.png?v=1723474269" alt="White Product">
      <div class="my-product-info">
        <span>White <i class="info-icon">i</i></span>
        <div class="my-quantity-controls">
          <button class="decrement">-</button>
          <input type="number" value="1" class="quantity">
          <button class="increment">+</button>
        </div>
      </div>
    </div>

    <!-- Product 2 -->
    <div class="my-product-item">
      <img src="https://cdn.shopify.com/s/files/1/0637/4703/1087/files/wax-special.png?v=1723474269" alt="Orange Product">
      <div class="my-product-info">
        <span>Orange <i class="info-icon">i</i></span>
        <div class="my-quantity-controls">
          <button class="decrement">-</button>
          <input type="number" value="2" class="quantity">
          <button class="increment">+</button>
        </div>
      </div>
    </div>

    <!-- Product 3 -->
    <div class="my-product-item">
      <img src="https://cdn.shopify.com/s/files/1/0637/4703/1087/files/wax-special.png?v=1723474269" alt="Flasher Product">
      <div class="my-product-info">
        <span>Flasher <i class="info-icon">i</i></span>
        <div class="my-quantity-controls">
          <button class="decrement">-</button>
          <input type="number" value="0" class="quantity">
          <button class="increment">+</button>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
/* Container and Layout */
.bundle-save-container {
  border: 2px solid #e7e7e7;
  padding: 5px 20px;
  width: 100%;
  max-width: 800px;
  margin: auto;
}

.bundle-table h3 {
  margin-bottom: 10px;
}

.bundle-table table {
  width: 100%;
  border-collapse: collapse;
}

.bundle-table th,
.bundle-table td {
  padding: 5px;
  text-align: left;
}

.discount {
  background-color: #b3a28f;
  color: white;
  padding: 2px 5px;
  border-radius: 5px;
  font-size: 12px;
}

.product-list {
  display: flex;
  flex-direction: column;
  gap: 20px;
  margin-top: 20px;
}

.my-product-item {
  display: flex;
  align-items: center;
}

.my-product-item img {
  width: 50px;
  height: 50px;
  margin-right: 20px;
}

.my-product-info {
  display: flex;
  flex-direction: column;
}

.my-quantity-controls {
  display: flex;
  align-items: center;
  gap: 5px;
  margin-top: 5px;
}

.my-quantity-controls button {
  width: 30px;
  height: 30px;
  background-color: #f0f0f0;
  border: 1px solid #ccc;
  cursor: pointer;
}

.my-quantity-controls input {
  width: 40px;
  text-align: center;
  border: 1px solid #ccc;
}

table:not([class]){
  box-shadow: none;
}
  
/* table:not([class]) td{
  padding: 5px;
}
 */
table:not([class]) td, table:not([class]) th {
  padding: 5px;
}  
  
 
</style>



